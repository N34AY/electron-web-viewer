{
  "name": "terminal-ui",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^15.3.1",
    "electron-builder": "^22.13.1"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "electron-log": "^4.4.1"
  },
  "build": {
    "appId": "com.arbitas.app",
    "productName": "Terminal UI",
    "target": "NSIS",
    "directories": {
      "output": "build"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": false,
      "oneClick": false
    }
  }
}
